    }
    .container {
      background: rgba(0, 0, 0, 0.3);
      padding: 40px 30px;
      border-radius: 30px;
      text-align: center;
      box-shadow: 0 8px 16px rgba(0,0,0,0.3);
      width: 500px;
    }
    h1 {
      margin-bottom: 20px;
    }
    input[type="file"] {
      display: block;
      margin: 15px auto;
