    .credit {
      position: fixed;
      bottom: 10px;
      right: 15px;
      font-size: 12px;
      opacity: 0.7;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Unir PDFs</h1>
    <p>Selecione múltiplos arquivos PDF para unir em um só.</p>
    <input type="file" id="pdfs" multiple accept=".pdf">
    <button id="btn" onclick="enviar()">Unir e Abrir</button>
    <button onclick="reset()">Resetar</button>
    <div class="progress-bar">
      <div class="progress" id="progress"></div>
    </div>
    <p id="status"></p>
    <div class="theme-toggle" onclick="toggleTheme()">Alternar Tema Claro/Escuro</div>
  </div>

  <div class="credit"><a href="https://www.linkedin.com/in/nathalia-gomes-magro-0686b9141/" target="_blank">Nathalia Gomes Magro - 2025</a>

<script>
let darkMode = true;

function setTheme() {
    document.documentElement.style.setProperty('--bg', darkMode ? 'linear-gradient(135deg, #667eea, #764ba2)' : '#f4f4f4');
    document.documentElement.style.setProperty('--text', darkMode ? '#fff' : '#333');
}

function toggleTheme() {
    darkMode = !darkMode;
    setTheme();
}

setTheme();

function enviar() {
    const input = document.getElementById('pdfs');
    const status = document.getElementById('status');
    const progress = document.getElementById('progress');
    const btn = document.getElementById('btn');
    const files = input.files;

    if (!files.length) {
        alert('Por favor, selecione ao menos um arquivo PDF.');
        return;
    }

    const readers = [];
    progress.style.width = '0%';
    status.innerText = "Lendo arquivos...";
    btn.classList.add('processing');

    for (let i = 0; i < files.length; i++) {
        const reader = new FileReader();
        reader.readAsDataURL(files[i]);
        readers.push(new Promise((resolve) => {
            reader.onload = () => {
                progress.style.width = ((i + 1) / files.length * 50) + '%';
                resolve(reader.result);
            };
        }));
    }

    Promise.all(readers).then(dataUrls => {
        status.innerText = "Processando...";
        progress.style.width = '75%';

        window.pywebview.api.unir_pdfs(dataUrls).then(result => {
            progress.style.width = '100%';
            status.innerText = "✅ PDF unido e aberto: " + result;
            btn.classList.remove('processing');
        }).catch(err => {
            status.innerText = "❌ Erro: " + err;
            progress.style.width = '0%';
            btn.classList.remove('processing');
        });
    });
}

function reset() {
    document.getElementById('pdfs').value = "";
    document.getElementById('status').innerText = "";
    document.getElementById('progress').style.width = "0%";
}
</script>
</body>
</html>
'''


class Api:
    def unir_pdfs(self, data_urls):
        writer = PdfWriter()
        
        for data_url in data_urls:
            header, encoded = data_url.split(',', 1)
            pdf_data = base64.b64decode(encoded)

            with tempfile.NamedTemporaryFile(delete=False, suffix=".pdf") as temp_pdf:
                temp_pdf.write(pdf_data)
                temp_pdf.flush()

                reader = PdfReader(temp_pdf.name)
                for page in reader.pages:
                    writer.add_page(page)

        # Abrir diálogo para escolher onde salvar
        root = Tk()
        root.withdraw()

        output_path = filedialog.asksaveasfilename(
            defaultextension=".pdf",
            filetypes=[("PDF files", "*.pdf")],
            title="Salvar PDF unido como"
        )

        if not output_path:
            return "Operação cancelada pelo usuário"

        with open(output_path, 'wb') as f:
            writer.write(f)

        self.abrir_arquivo(output_path)

        return output_path

    def abrir_arquivo(self, caminho):
        if platform.system() == 'Windows':
            os.startfile(caminho)
        elif platform.system() == 'Darwin':
            subprocess.run(['open', caminho])
        else:
            subprocess.run(['xdg-open', caminho])

if __name__ == '__main__':
    api = Api()
    webview.create_window('Unir PDFs', html=HTML, js_api=api, width=500, height=500)
    webview.start()
